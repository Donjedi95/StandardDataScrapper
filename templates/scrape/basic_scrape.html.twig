{% extends 'base.html.twig' %}

{% block body %}
    <label>
        <span class="label">{{ label }}:</span>
        <textarea>{{ data }}</textarea>
    </label>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        textarea {
            background-image: linear-gradient(to right, #121212 , #273752);
            color: #407e86;
            width: 100%;
            height: 600px;
        }
        .label {
            font-family: "Times New Roman", monospace;
            font-weight: bold;
            font-size: 32px;
            color: #000;
        }
    </style>

{% endblock %}
